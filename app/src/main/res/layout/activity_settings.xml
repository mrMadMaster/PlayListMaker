<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_arrow_back_24"
            android:contentDescription="@string/title"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="@dimen/primary_text_size"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/small_padding"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/back"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_size"
        android:paddingStart="@dimen/medium_padding"
        android:paddingEnd="6dp"
        android:layout_marginTop="@dimen/top_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/night"
            android:layout_toStartOf="@+id/day_night"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <Switch
            android:id="@+id/day_night"
            android:layout_width="@dimen/medium_size"
            android:layout_height="@dimen/button_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_size"
        android:paddingStart="@dimen/medium_padding"
        android:paddingEnd="@dimen/small_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:layout_toStartOf="@+id/send"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/icon_top_padding"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_send_24"
            android:contentDescription="@string/send" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_size"
        android:paddingStart="@dimen/medium_padding"
        android:paddingEnd="@dimen/small_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:layout_toStartOf="@+id/support"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/icon_top_padding"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_support_24"
            android:contentDescription="@string/support" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_size"
        android:paddingStart="@dimen/medium_padding"
        android:paddingEnd="@dimen/small_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_agreement"
            android:layout_toStartOf="@+id/user_agreement"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/icon_top_padding"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_user_agreement_24"
            android:contentDescription="@string/user_agreement" />
    </RelativeLayout>
</LinearLayout>